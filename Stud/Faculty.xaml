<Window x:Class="Stud.University"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stud"
        mc:Ignorable="d"
        Title="Faculty" Height="450" Width="900" Background="#FFEDEDED">
    <Grid>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="40" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>


                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Faculty" FontWeight="Bold" HorizontalAlignment="Left" Grid.Row="0" RenderTransformOrigin="9.207,1.118" Margin="0,-6,0,334" Grid.RowSpan="2" />
                    <ListBox Grid.Row="1" 
                     Margin="0,54,54,22" 
                     ScrollViewer.VerticalScrollBarVisibility="Visible" 
                     ItemsSource="{Binding ObservableFacultyList}"
                     SelectedItem="{Binding SelectedFaculty}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Path=Name, Mode=OneWay}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <TextBlock HorizontalAlignment="Left" Height="22" Margin="10,14,0,0" Grid.Row="1" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Foreground="#FFE71C1C" Background="#FFEDEDED"/>
                    <Button Content="Add" HorizontalAlignment="Left" Height="22" Margin="223,17,0,0" Grid.Row="1" VerticalAlignment="Top" Width="42" Click="AddNext" BorderBrush="{x:Null}">
                        <Button.ToolTip>
                            <ToolTip>
                                Add new faculty
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <TextBlock HorizontalAlignment="Left" Height="22" Margin="0,17,0,0" Grid.Row="1" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Foreground="#FFE71C1C" Background="#FFD9DCF6"/>
                    <ListBox Grid.Row="1" 
                        Margin="476,54,-422,22" 
                        ScrollViewer.VerticalScrollBarVisibility="Visible" 
                        ItemsSource="{Binding ObservableFacultyList}"
                        SelectedItem="{Binding SelectedFaculty}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name, Mode=OneWay}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                <TextBlock HorizontalAlignment="Left" Height="22" Margin="56,17,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Foreground="#FFE71C1C" Background="#FFD9DCF6" Grid.Column="3"/>
                <TextBlock Text="Group" FontWeight="Bold" HorizontalAlignment="Left" Grid.Row="0" RenderTransformOrigin="9.207,1.118" Grid.Column="3" Margin="56,0,0,332" Height="16" VerticalAlignment="Bottom" />
                <Button Content="Add" HorizontalAlignment="Left" Height="22" Margin="280,17,0,0" VerticalAlignment="Top" Width="42" Grid.Column="3" BorderBrush="{x:Null}" RenderTransformOrigin="0.681,0.075">
                    <Button.ToolTip>
                        <ToolTip>
                            Add new group
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </Grid>
            <Button Content="Delete faculty" HorizontalAlignment="Left" Height="35" Margin="39,332,0,0" Grid.Row="1" VerticalAlignment="Top" Width="111" Grid.RowSpan="3"  Background="#FFE2B1B1" BorderBrush="{x:Null}"/>
            <Button Content="Delete group" HorizontalAlignment="Left" Height="35" Margin="516,332,0,0" Grid.Row="1" VerticalAlignment="Top" Width="111" Grid.RowSpan="3" BorderBrush="{x:Null}" Background="#FFE2B1B1"/>
            <Button Content="Edit faculty" HorizontalAlignment="Left" Height="35" Margin="276,332,0,0" Grid.Row="1" VerticalAlignment="Top" Width="111" Grid.RowSpan="3" Background="#FFA2C9CB" BorderBrush="{x:Null}"/>
            <Button Content="Edit group" HorizontalAlignment="Left" Height="35" Margin="750,332,0,0" Grid.Row="1" VerticalAlignment="Top" Width="111" Grid.RowSpan="3" BorderBrush="{x:Null}" Background="#FFA2C9CB"/>
            <Button Content="Delete all faculty" HorizontalAlignment="Left" Height="35" Margin="39,18,0,0" Grid.Row="3" VerticalAlignment="Top" Width="111" Grid.RowSpan="2"  Background="#FFD47878" BorderBrush="{x:Null}"/>
            <Button Content="Delete all group" HorizontalAlignment="Left" Height="35" Margin="516,18,0,0" Grid.Row="3" VerticalAlignment="Top" Width="111" Grid.RowSpan="2"  Background="#FFD47878" BorderBrush="{x:Null}"/>

        </Grid>
    </Grid>


</Window>
