<Window x:Class="Stud.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Stud"
        Title="University" Height="700" Width="1240
"       Icon="/colegio.ico">
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.OpenUniversityEditor" Executed="OpenUniversityEditor" />
    </Window.CommandBindings>

    <Grid Background="#FFEDEDED">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"   Grid.Column="0" Grid.RowSpan="3"  Margin="0, 10, 0, 10">
            <Image Source="/colegio.png" Stretch="Uniform"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0" Margin="10, 0, 10, 0">
            <Button Grid.Row="2" Grid.Column="1" Click="OpenUniversityEditor" Background="#FFE8BF56" BorderBrush="#FFE8BF56" Height="40"
                    Width="Auto" RenderTransformOrigin="0.8,1" FontFamily="Arial Black">
                <Button.ToolTip>
                    <ToolTip>
                        Information about faculties and groups
                    </ToolTip>
                </Button.ToolTip>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <TextBlock Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Center" Text="Manage Faculties"
                           FontFamily="Arial Black" FontSize="18" Foreground="White"/>
            </Button>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.Children>
                <StackPanel Margin="10">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="0,25,0,0"/>
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontSize" Value="18" />
                            <Setter Property="Background" Value="#FFE8BF56" />
                            <Setter Property="FontFamily" Value="Arial Black" />
                            <Setter Property="BorderBrush"  Value="#FFE8BF56" />
                            <Setter Property="Height"  Value="40" />
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="Add student..." Click="OpenAddStudentModal" IsEnabled="{Binding IsGroupFromGoinedListSelected}"  BorderBrush="{x:Null}" >
                        <Button.ToolTip>
                            <ToolTip>
                                Add data about new student
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="View student..." IsEnabled="{Binding IsStudentSelected}"   BorderBrush="#FFE8BF56">
                        <Button.ToolTip>
                            <ToolTip>
                                View student info
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="Edit student..." Click="OpenEditStudentModal" IsEnabled="{Binding IsStudentSelected}" BorderBrush="#FFE8BF56">
                        <Button.ToolTip>
                            <ToolTip>
                                Edit data about student
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="Delete student" Click="DeleteSelectedStudent" IsEnabled="{Binding IsStudentSelected}">
                        <Button.ToolTip>
                            <ToolTip>
                                Delete selected student
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>

                    <Button Content="Statistics.." Click="CalcStat">
                        <Button.ToolTip>
                            <ToolTip>
                                Delete selected student
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>

                </StackPanel>

                <Button Click="OnCloseClick" Grid.Row="1" Margin="10" Height="40" Content="Exit" FontFamily="Arial" FontSize="18">
                    <Button.ToolTip>
                        <ToolTip>
                            DExit from application
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </Grid.Children>
            
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Margin="20, 0, 0, 0"  VerticalAlignment="Bottom" FontSize="15" Text="Faculty" FontWeight="Bold" Grid.Row="1"  />
            <TextBlock Grid.Column="1" VerticalAlignment="Bottom" FontSize="15" Text="Group" FontWeight="Bold" Grid.Row="1"  />
            <TextBlock Grid.Column="2" Margin="-10, 0, 20, 0" VerticalAlignment="Bottom" FontSize="15" Text="Search by full name" FontWeight="Bold" Grid.Row="1" />
        </Grid>

        <Grid Grid.Row="3" Margin="10, 0, 20 ,0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>

            <xctk:WatermarkComboBox
                 x:Name="FacultySelect"
                SelectionChanged="FacultySelectionChanged"
                SelectedItem="{Binding SelectedFaculty, Mode=OneWay}" Watermark="Select faculty" Grid.Column="0" 
                Margin="10, 0, 10, 0" HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" FontSize="16">
                <xctk:WatermarkComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path=Name}" FontSize="16"/>
                        </StackPanel>
                    </DataTemplate>
                </xctk:WatermarkComboBox.ItemTemplate>
            </xctk:WatermarkComboBox>

            <xctk:WatermarkComboBox
                x:Name="GroupSelect"
                SelectionChanged="GroupsSelectionChanged"
                SelectedItem="{Binding SelectedGroup, Mode=OneWay}"
                Watermark="Select group" 
                Grid.Column="1" Margin="0, 0, 10, 0" HorizontalAlignment="Stretch" Height="50" 
                VerticalAlignment="Top" FontSize="18"
            >
                <xctk:WatermarkComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path=Name}" FontSize="16"/>
                        </StackPanel>
                    </DataTemplate>
                </xctk:WatermarkComboBox.ItemTemplate>
            </xctk:WatermarkComboBox>

            <xctk:WatermarkTextBox
                x:Name="SearchInput" Grid.Column="2" Margin="0, 0, 10, 0" HorizontalAlignment="Stretch"
                Height="50" Watermark="Search by name" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18"/>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.Children>
                <ListBox 
                    Grid.Column="0"
                    Margin="20, 20, 30, 20" 
                    x:Name="StudentsListBox"
                    ScrollViewer.VerticalScrollBarVisibility="Visible" 
                    ItemsSource="{Binding SelectedGroup}"
                    SelectionChanged="StudentSelectionChanged"
                    SelectedValue="{Binding SelectedStudent, Mode=OneWay}"
                    HorizontalAlignment="Stretch"
                    FontSize="18"
                 >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Path=FullName}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Grid Grid.Row="4" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid.Resources>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                            <Setter Property="Visibility" Value="Visible" />
                        </Style>
                        
                    </Grid.Resources>

                    <Grid.Children>
                        <TextBlock Text="Selected student info:" FontSize="22"  FontWeight="Bold" Grid.Row="0"  Margin="0, 20, 0, 0" />
                        <TextBlock Text="Full Name:" FontWeight="Bold" Grid.Row="1"  Margin="0, 20, 0, 0" />
                        <TextBlock x:Name="StudentNameText" Text=""  Grid.Row="2"/>

                        <TextBlock Text="Born:"  FontWeight="Bold"   Grid.Row="3" Margin="0, 20, 0, 0" />
                        <TextBlock x:Name="StudentYearText" Text="" Grid.Row="4" />

                        <TextBlock Text="Average Mark:"  FontWeight="Bold" Grid.Row="5" Margin="0, 20, 0, 0"/>
                        <TextBlock x:Name="StudentMarkText" Text=""  Grid.Row="6" />
                    </Grid.Children>
                </Grid>
            </Grid.Children>
        </Grid>


        




